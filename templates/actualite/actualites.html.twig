{% extends 'base.html.twig' %}

{% block title %}Actualités |SLIM JERBIA{% endblock %}

{% block body %}

    <h1>Actualites de slim</h1>
    {% if   "ROLE_DIRECTEUR"  in app.user.roles  %}
        <div class="col-xl-12" id="create-topic">

            <a href="{{ path("creer_act",{'idDirecteur':app.user.id}) }}"><p><b>➕</b> Ajouter une nouvelle actualité</p></a>
        </div>
    {% endif %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">

    <div class="container blog-page">
        <div class="row clearfix">
                {% for act in acts %}



                    <div class="col-lg-4 col-md-12">

                    <div class="card single_post">
                    <div class="header">
                        <h2><strong>Actualité crée le   </strong> {{ act.createdAt | date('d/m/Y H:i:s') }}</h2>
                        {% if   "ROLE_DIRECTEUR"  in app.user.roles  %}
                            <a href="{{ path('delete',{id: act.id}) }}"  title="supprimer">supprimer</a>

                        {% endif %}
                    </div>

                    <div class="body">
{#                        <h3 class="m-t-0 m-b-5"><a href="blog-details.html">Actualité crée le  {{ act.createdAt | date('d/m/Y H:i:s') }} </a></h3>#}
                        <ul class="meta">
                            <li><a href="javascript:void(0);"><i class="zmdi zmdi-account col-blue"></i>Posted By: SLIM <strong>JERBIA</strong></a></li>
                            <br/>
                            <li><a href="javascript:void(0);"><i class="zmdi zmdi-label col-amber"></i> <span class="topic-title">{{ act.nom }}</span></a></li>
{#                            <li><a href="javascript:void(0);"><i class="zmdi zmdi-comment-text col-blue"></i>Comments: 3</a></li>#}
                        </ul>
                    </div>
                    <div class="body">
                        <div class="img-post m-b-15">
                            <img src=" {{ asset('uploads/images/'  ~ act.image) }}" alt="Awesome Image">
                            <div class="social_share">
                                <button class="btn btn-primary btn-icon btn-icon-mini btn-round">SLIM <strong>JERBIA</strong></button>

                            </div>
                        </div>
                        <p>{{ act.sujet }}</p>
                        <a href="{{ path('detailact',{id: act.id}) }}" title="read more" class="btn btn-round btn-info">Read More</a>
                    </div>
                    </div></div>
                {% endfor %}
                    </div></div>


{% endblock %}